<h2>Skills: </h2>
<ul class='no-pad no-dots'>
  <li><span class='bold'>Base Class Skills: </span>
    <ul>
      <% resource.base_class_skills.each do |skill| %>
        <li><%= link_to skill.name, skill %></li>
      <% end %>
    </ul>
  </li>
  <li><span class='bold'>Passive Skills: </span>
    <ul>
      <% resource.passive_skills.each do |skill| %>
        <li><%= link_to skill.name, skill %></li>
      <% end %>
    </ul>
  </li>
  <li><span class='bold'>Active Skills: </span>
    <ul>
      <% resource.active_skills.each do |skill| %>
        <li><%= link_to skill.name, skill %></li>
      <% end %>
    </ul>
  </li>
</ul>
