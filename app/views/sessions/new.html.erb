<% title "Login" %>
<h1>Login</h1>
<hr>
<%= render partial: '/errors', locals: {errors: @errors} %>

<%= form_for @user, url: login_path, method: 'post' do |f| %>
  <%= f.label :Username %>
  <%= f.text_field :username %>
  <%= f.label :Password %>
  <%= f.password_field :password %>
  <%= f.submit 'login' %>
<% end %>
