<div id='nav'>
  <% if logged_in? %>
    <%= link_to(current_user.username, user_path(current_user)) %> <span>|</span>
    <%= link_to('Logout', logout_path, method: :delete) %>
  <% else %>
    <%= link_to('Login', login_path) %> <span>|</span>
    <%= link_to('Register', new_user_path) %>
  <% end %>
</div>
