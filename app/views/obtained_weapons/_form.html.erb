<h2>Obtain new weapons:</h2>

<%= form_for [@character, ObtainedWeapon.new], remote: true do |f|%>
  <%= select_tag :weapon_id, options_from_collection_for_select((Weapon.all - @character.weapons), :id, :name), class: 'select_equipment' %>
  <%= f.submit 'Obtain weapon' %>
<% end %>

<%= form_for (Weapon.all - @character.weapons).first, html: {class: 'details-form'}, remote: true, method: 'get' do |f| %>
  <button>Details</button>
<% end %>
