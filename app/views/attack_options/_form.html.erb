<label><span class='bold'>Attack Option Details:</span></label>
    <div class='form-field'>
      <%= label_tag :name %>
      <%= text_field_tag 'attack_option[name]', @attack_option.name %>
    </div>
    <div class='form-field'>
      <%= label_tag :description %>
      <%= text_area_tag 'attack_option[description]', @attack_option.description %>
    </div>
    <div class='form-field'>
      <%= label_tag :damage_type %>
      <%= select_tag 'attack_option[damage_type_id]',  options_from_collection_for_select(@damage_types, "id", "name") %>
    </div>
    <div class='form-field'>
      <%= label_tag :strength_dice %>
      <%= number_field_tag 'attack_option[strength_dice]', @attack_option.strength_dice, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :dexterity_dice %>
      <%= number_field_tag 'attack_option[dexterity_dice]', @attack_option.dexterity_dice, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :energy_modifier %>
      <%= number_field_tag 'attack_option[energy_modifier]', @attack_option.energy_modifier, in: 1..3, step: 0.5, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :attack_die_number %>
      <%= number_field_tag 'attack_option[die_number]', @attack_option.die_number, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :attack_die_size %>
      <%= number_field_tag 'attack_option[die_size]', @attack_option.die_size, in: 2..12, step: 2, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :attack_bonus %>
      <%= number_field_tag 'attack_option[attack_bonus]', @attack_option.attack_bonus, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :damage_die_number %>
      <%= number_field_tag 'attack_option[damage_dice]', @attack_option.damage_dice, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :damage_die_size %>
      <%= number_field_tag 'attack_option[damage_die_size]', @attack_option.damage_die_size, in: 2..12, step: 2, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :strength_damage_bonus %>
      <%= number_field_tag 'attack_option[strength_damage_bonus]', @attack_option.strength_damage_bonus, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :dexterity_damage_bonus %>
      <%= number_field_tag 'attack_option[dexterity_damage_bonus]', @attack_option.dexterity_damage_bonus, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :flat_damage_bonus %>
      <%= number_field_tag 'attack_option[flat_damage_bonus]', @attack_option.flat_damage_bonus, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :condition_1_type %>
      <%= select_tag 'condition1[condition_id]', options_from_collection_for_select(@conditions, "id", "name") %>
    </div>
    <div class='form-field'>
      <%= label_tag :threshold_1 %>
      <%= number_field_tag 'condition1[threshold]', @condition1 ? @condition1.threshold : 10, class: 'number-field' %>
    </div>
    <div class='form-field'>
      <%= label_tag :condition_2_type %>
      <%= select_tag 'condition2[condition_id]', options_from_collection_for_select(@conditions, "id", "name") %>
    </div>
    <div class='form-field'>
      <%= label_tag :threshold_2 %>
      <%= number_field_tag 'condition2[threshold]', @condition2 ? @condition2.threshold : 20, class: 'number-field' %>
    </div>
