<% title @user.name %>
<h1> <%= @user.username %>'s Page </h1>

<div class='flex-row'>
  <div>
    <h2> Characters: </h2>
    <ul>
      <% @characters.each do |character| %>
        <li> <%= link_to(character.name, character) %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <h2> Weapons: </h2>
    <ul>
      <% @user.weapons.each do |weapon| %>
        <li> <%= link_to(weapon.name, weapon) %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <h2> Armor: </h2>
    <ul>
    <% @user.armors.each do |armor| %>
      <li> <%= link_to(armor.name, armor) %></li>
    <% end %>
    </ul>
  </div>

</div>
